#!/bin/sh

case "$1" in
    configure)       
	   signal-event sundtek-hardware
#	   cp /tmp/sundtek_installer_development.sh /usr/share/doc/yavdr-installer-sundtek
#	   rm -f /tmp/sundtek_installer_development.sh
        ;;

    triggered)
            sed -i 's#/opt/lib/libmediaclient.so.*$##' /etc/ld.so.preload 2>/dev/null||:
        ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

exit 0

#DEBHELPER#
